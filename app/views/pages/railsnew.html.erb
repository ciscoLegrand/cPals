
  <div class="w-full md:w-1/2 lg:container mx-auto flex flex-col gap-8 mb-12" data-controller="rails-command" >
    <!-- TITLE -->
    <h1 class="w-full flex justify-center items-center text-4xl font-bold text-slate-200 py-4">Customize your rails app!!</h1>

    <!-- FORMULARIO PARA INTRODUCIR EL NOMBRE DE LA APP -->
    <div class="w-full">
      <%= text_field_tag :app_name, nil, id: "appName", 
                        placeholder: "Enter app name",
                        data: {
                          'rails-command-target': 'input',
                          action:'keyup->rails-command#updateOutput'
                        },
                        type: 'text',
                        class: 'w-full text-lime-600 font-semibold bg-slate-950 rounded-xl py-4 border border-transparent' %>

      
    </div>
    <div class="sticky top-0 bg-gray-800 font-mono">
      <%= render UI::Terminal.new(code: nil, language: 'bash')%>
    </div>
    <!-- SECCION DONDE RENDERIZAR CON ESTILOS BASH EL COMANDO CON FLAGS -->
    <h2 class="w-full flex justify-center items-center text-4xl font-bold text-slate-200 py-4">Use Rails preset?</h2>
    <div class="flex flex-col [&>*:nth-child(odd)]:bg-slate-950 [&>*:nth-child(even)]:bg-slate-900 [&>*:first-child]:rounded-t-xl [&>*:last-child]:rounded-b-xl">
      <%= render(UI::Command.new(flag: 'preset_none',  type: 'radio', target: 'preset', checked: true,)) %>
      <%= render(UI::Command.new(flag: 'api',          type: 'radio', target: 'preset')) %>
      <%= render(UI::Command.new(flag: 'minimal',      type: 'radio', target: 'preset')) %>
    </div>
    <h2 class="w-full flex justify-center items-center text-4xl font-bold text-slate-200 py-4">Database</h2>
    <div class="flex flex-col [&>*:nth-child(odd)]:bg-slate-950 [&>*:nth-child(even)]:bg-slate-900 [&>*:first-child]:rounded-t-xl [&>*:last-child]:rounded-b-xl">
      <%= render(UI::Command.new(flag: 'sqlite3',   type: 'radio', icon: 'sqlite',      target: 'database', checked: true)) %>
      <%= render(UI::Command.new(flag: 'postgresql', type: 'radio', icon: 'postgresql',  target: 'database')) %>
      <%= render(UI::Command.new(flag: 'mysql',    type: 'radio', icon: 'mysql',       target: 'database')) %>
      <%#= render(UI::Command.new(flag: 'mongo', type: 'radio', icon: 'mongodb')) %>
    </div>

    <h2 class="w-full flex justify-center items-center text-4xl font-bold text-slate-200 py-4">Housekeeping</h2>
    <div class="flex flex-col [&>*:nth-child(odd)]:bg-slate-950 [&>*:nth-child(even)]:bg-slate-900 [&>*:first-child]:rounded-t-xl [&>*:last-child]:rounded-b-xl">
      <%= render(UI::Command.new(flag: 'gitignore',  type: 'checkbox', target: 'housekeeping')) %>
      <%= render(UI::Command.new(flag: 'keeps',      type: 'checkbox', target: 'housekeeping')) %>
      <%= render(UI::Command.new(flag: 'bootsnap',   type: 'checkbox', target: 'housekeeping')) %>
      <%= render(UI::Command.new(flag: 'bundle',     type: 'checkbox', target: 'housekeeping')) %>
    </div>
    <h2 class="w-full flex justify-center items-center text-4xl font-bold text-slate-200 py-4">Asset Pipeline</h2>
    <div class="flex flex-col [&>*:nth-child(odd)]:bg-slate-950 [&>*:nth-child(even)]:bg-slate-900 [&>*:first-child]:rounded-t-xl [&>*:last-child]:rounded-b-xl">
      <%= render(UI::Command.new(flag: 'pipeline_none',  type: 'radio', target: 'pipeline', checked: true)) %>
      <%= render(UI::Command.new(flag: 'sprockets',      type: 'radio', target: 'pipeline')) %>
      <%= render(UI::Command.new(flag: 'propshaft',      type: 'radio', target: 'pipeline')) %>
    </div>
    <h2 class="w-full flex justify-center items-center text-4xl font-bold text-slate-200 py-4">JavaScript</h2>
    <div class="flex flex-col [&>*:nth-child(odd)]:bg-slate-950 [&>*:nth-child(even)]:bg-slate-900 [&>*:first-child]:rounded-t-xl [&>*:last-child]:rounded-b-xl">
      <%= render(UI::Command.new(flag: 'javascript_none',  type: 'radio', target: 'javascript', checked: true)) %>
      <%= render(UI::Command.new(flag: 'importmap',        type: 'radio', target: 'javascript')) %>
      <%= render(UI::Command.new(flag: 'esbuild',          type: 'radio', icon: 'esbuild', target: 'javascript')) %>
      <%= render(UI::Command.new(flag: 'rollup',           type: 'radio', icon: 'rollup',  target: 'javascript')) %>
      <%= render(UI::Command.new(flag: 'webpack',          type: 'radio', icon: 'webpack', target: 'javascript')) %>
    </div>
    <h2 class="w-full flex justify-center items-center text-4xl font-bold text-slate-200 py-4">CSS</h2>
    <div class="flex flex-col [&>*:nth-child(odd)]:bg-slate-950 [&>*:nth-child(even)]:bg-slate-900 [&>*:first-child]:rounded-t-xl [&>*:last-child]:rounded-b-xl">
      <%= render(UI::Command.new(flag: 'css_none',   type: 'radio', target: 'css', checked: true)) %>
      <%= render(UI::Command.new(flag: 'bootstrap',  type: 'radio', icon: 'bootstrap', target: 'css')) %>
      <%= render(UI::Command.new(flag: 'bulma',      type: 'radio', icon: 'bulma',     target: 'css')) %>
      <%= render(UI::Command.new(flag: 'tailwind',   type: 'radio', icon: 'tailwind',  target: 'css')) %>
      <%= render(UI::Command.new(flag: 'postcss',    type: 'radio', icon: 'postcss',   target: 'css')) %>
      <%= render(UI::Command.new(flag: 'sass',       type: 'radio', icon: 'sass',      target: 'css')) %>
    </div>
    <h2 class="w-full flex justify-center items-center text-4xl font-bold text-slate-200 py-4">Rails Goodies</h2>
    <div class="flex flex-col [&>*:nth-child(odd)]:bg-slate-950 [&>*:nth-child(even)]:bg-slate-900 [&>*:first-child]:rounded-t-xl [&>*:last-child]:rounded-b-xl">
      <%= render(UI::Command.new(flag: 'cable',    type: 'checkbox', target: 'goodies')) %>
      <%= render(UI::Command.new(flag: 'job',      type: 'checkbox', target: 'goodies')) %>
      <%= render(UI::Command.new(flag: 'mailbox',  type: 'checkbox', target: 'goodies')) %>
      <%= render(UI::Command.new(flag: 'mailer',   type: 'checkbox', target: 'goodies')) %>
      <%= render(UI::Command.new(flag: 'record',   type: 'checkbox', target: 'goodies')) %>
      <%= render(UI::Command.new(flag: 'storage',  type: 'checkbox', target: 'goodies')) %>
      <%= render(UI::Command.new(flag: 'text',     type: 'checkbox', target: 'goodies')) %>
      <%= render(UI::Command.new(flag: 'hotwire',  type: 'checkbox', target: 'goodies')) %>
      <%= render(UI::Command.new(flag: 'jbuilder', type: 'checkbox', target: 'goodies')) %>
    </div>
    <h2 class="w-full flex justify-center items-center text-4xl font-bold text-slate-200 py-4">Test</h2>
    <div class="flex flex-col [&>*:nth-child(odd)]:bg-slate-950 [&>*:nth-child(even)]:bg-slate-900 [&>*:first-child]:rounded-t-xl [&>*:last-child]:rounded-b-xl">
      <%= render(UI::Command.new(flag: 'test',   type: 'checkbox', target: 'tests')) %>
      <%= render(UI::Command.new(flag: 'system-test', type: 'checkbox', target: 'tests')) %>
    </div>
  </div>


